%h1 Listing books

%table
  %thead
    %tr
      %th Cover
      %th Title
      %th Author
      %th Description
      %th
      %th

  %tbody
    - @books.each do |book|
      %tr
        %td= link_to (image_tag book.image.url), book
        %td= book.title
        %td= book.author
        %td= book.description
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure?' }




